<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="books.scss" />
    <title>Bookers1</title>
  </head>

  <header>
    <h1>Books</h1>
  </header>

  <body>
    <table>
      <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(@book) %></td>
          <td><%= link_to "Destroy", @book, "data-confirm" => "Are you sure?" %></td>        
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <h2>New Book</h2>
    <!-- form_with部分 -->
    <% if @book.errors.any? %>
	    ul{<% @book.errors.full_messages.each do |message| %>}
    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
	
      <h4>Book</h4>
      <%= f.text_area :body %>
	
      <%= f.submit 'Create Book' %>
  <% end %>
  </body>
</html>